<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lablyrics">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".di.LyricsApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lablyrics" >

    <activity android:name="com.example.lablyrics.ui.about.AboutActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <activity android:name="com.example.lablyrics.ui.search.SearchActivity">
        </activity>
        <activity android:name="com.example.lablyrics.ui.lyrics.LyricsActivity">
        </activity>
        <activity android:name="com.example.lablyrics.ui.showLyrics.ShowLyricsActivity">
        </activity>

</application>

</manifest>